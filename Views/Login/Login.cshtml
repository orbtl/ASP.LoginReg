@model LoginRegistration.Models.LoginUser
<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-header text-center bg-info text-white">
                    <h2>Please Login</h2>
                </div>
                <div class="card-body">
                    <form asp-action="submitlogin" asp-controller="Login" method="post">
                        <div class="form-group">
                            <label asp-for="Email"></label>
                            <input class="form-control" asp-for="Email">
                            <div class="text-danger small" style="height: 5px;"><span asp-validation-for="Email"></span></div>
                        </div>
                        <div class="form-group mb-4">
                            <label asp-for="Password"></label>
                            <input class="form-control" asp-for="Password">
                            <div class="text-danger small" style="height: 5px;"><span asp-validation-for="Password"></span></div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-3 offset-md-1">
                                <button type="submit" value="Submit" class="btn btn-primary" style="width: 100px;">Login</button>
                            </div>
                            <div class="col-md-3 offset-md-4">
                                <a href="/register" class="btn btn-secondary" style="width: 100px;">Register</a>
                            </div>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>